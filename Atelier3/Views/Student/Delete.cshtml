@model Atelier3.Models.Student 

@{
    ViewData["Title"] = "Delete a Student";
}

<div class="container mt-4">
    <h1 class="text-center">Delete a Student</h1>
    <h3 class="text-danger">Are you sure you want to delete this student ?</h3>

    <div>
        <h4>Student Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.StudentName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.StudentName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BirthDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.School)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.School.SchoolID)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="StudentId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Return to list</a>
        </form>
    </div>
</div>
