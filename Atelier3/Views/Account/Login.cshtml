@model Atelier3.ViewModels.LoginViewModel
@{
    ViewBag.Title = "User Login";
}
<h1 style="text-shadow: 0 0 black; align-items: center; justify-content: center; display: flex;">User Login</h1>
@{
    var returnUrl = Context.Request.Query["ReturnUrl"];
}
<div class="row" >
    <div class="col-md-12" style="align-items: center; justify-content: center; display: flex;">

        <form asp-route-returnurl="@returnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" style="text-shadow: 0 0 black;"></label>
                <br />
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Password" style="text-shadow: 0 0 black;"></label>
                <br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe" style="text-shadow: 0 0 black;">
                        <input asp-for="RememberMe" />

                        @Html.DisplayNameFor(m => m.RememberMe)

                    </label>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary" style="background-color:cadetblue ; border: cadetblue">Login</button>

        </form>
    </div>
</div>