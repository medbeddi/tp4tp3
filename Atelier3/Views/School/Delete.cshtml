@model Atelier3.Models.School

@{
    ViewData["Title"] = "Deletion Confirmation";
}

<div class="container mt-4">
    <h1 class="text-center">Suppression of the School</h1>

    <h3>Are you sure you want to delete this school?</h3>
    <br />
    <div>
        <h4>School Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.SchoolName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SchoolName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.SchoolAdress)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SchoolAdress)
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="SchoolID" />
            <div class="mt-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Return to List</a>
            </div>
        </form>
    </div>
</div>
