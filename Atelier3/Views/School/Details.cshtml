@model Atelier3.Models.School

@{
    ViewData["Title"] = "School Details";
}

<div class="container mt-4">
    <h1 class="text-center">School Details</h1>

    <h4>Information about the School</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.SchoolName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SchoolName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.SchoolAdress)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SchoolAdress)
        </dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.SchoolID" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Return to List</a>
    </div>
</div>